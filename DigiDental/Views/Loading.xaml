<Window x:Class="DigiDental.Views.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigiDental.Views"
        mc:Ignorable="d"
        Title="Loading" Height="400" Width="500" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  WindowStyle="None"
        Background="Salmon"
        ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Name="Status" VerticalAlignment="Center"  Text="INITIALIZE" FontSize="24" FontFamily="Microsoft JhengHei" />
    </Grid>
</Window>
