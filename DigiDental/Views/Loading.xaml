<Window x:Class="DigiDental.Views.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigiDental.Views"
        mc:Ignorable="d"
        Title="Loading" Height="330" Width="450" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  WindowStyle="None" Topmost="True"
        ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/DigiDental;component/Resource/dental-care.jpg"></Image>
        <TextBlock Grid.Row="1" Name="Status" VerticalAlignment="Center"  Text="INITIALIZE" FontSize="16" FontFamily="Microsoft JhengHei"/>
    </Grid>
</Window>
